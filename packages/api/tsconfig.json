{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "es6", "es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "sourceMap": true,
    "removeComments": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "lib", "node_modules"]
}
